<p id="notice"><%= notice %></p>

<h1>Hostels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Room</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hostels.each do |hostel| %>
      <tr>
        <td><%= hostel.name %></td>
        <td><%= hostel.room %></td>
        <td><%= hostel.address %></td>
        <td><%= link_to 'Show', hostel %></td>
        <td><%= link_to 'Edit', edit_hostel_path(hostel) %></td>
        <td><%= link_to 'Destroy', hostel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= button_tag "create there records hostels",id:"create_three_records" %>
<br>    

   <div id= "ajax_result">
   </div>

<%= link_to 'New Hostel', new_hostel_path %>

<script>
$("#create_three_records").click(function(){
    $.ajax({
            type: "GET",
            url: "hostels/ajax_demo",
            data: "",
            success: function(data) {
             $("#ajax_result").text("created 3 records in hostels table");
            },
            error: function(data) {
             alert("error")
            }
          });
});
</script>

