<h1> users index </h1>
<table>
	<thead>
		<tr>
			<th> Name</th>
			<th> Cite</th>
			<th> Country</th>
			<th> Email</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%=user.name%></td>
			<td><%=user.city%></td>
			<td><%=user.country%></td>
			<td><%=user.email%></td>
			<td><%colspan= '3'%></td>

			<td><%=link_to 'show', user_path(user)%></td>
			<td><%=link_to 'edit', edit_user_path(user)%></td>
			<td><%=link_to 'destroy', user,method: :delete,data:{confirm: 'Are you sure'} %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New user" ,new_user_path%>

